<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/default_padding"
    android:background="?attr/selectableItemBackground"
    tools:context=".presentation.feature.list.CharactersAdapter">

  <ImageView
      android:id="@+id/photo_image_view"
      android:layout_width="36dp"
      android:layout_height="36dp"
      android:contentDescription="@string/character_photo"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:src="@drawable/ic_avatar_placeholder"/>

  <TextView
      android:id="@+id/nick_text_view"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/default_padding"
      android:textStyle="bold"
      android:textSize="@dimen/text_default_size"
      app:layout_constraintLeft_toRightOf="@id/photo_image_view"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:text="Heisenberg"/>

  <TextView
      android:id="@+id/name_text_view"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      app:layout_constraintLeft_toLeftOf="@id/nick_text_view"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@id/nick_text_view"
      app:layout_constraintBottom_toBottomOf="parent"
      tools:text="Walter White"/>

</androidx.constraintlayout.widget.ConstraintLayout>